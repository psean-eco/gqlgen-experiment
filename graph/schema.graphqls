# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Device {
  id: ID!
  name: String!
  location: String
}

type Query {
  devices: [Device!]!
}

type Mutation {
  createDevice(input: NewDevice!): Device!
  deleteDevice(input: NewDevice!): Boolean!
}

input NewDevice {
  id: ID!
  name: String!
  location: String
}
